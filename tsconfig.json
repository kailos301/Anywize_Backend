{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "es2015",
      "es2017",
      "es2019"
    ],
    "target": "es2019",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true
  },
  "exclude": [
    "apidoc",
    "node_modules",
    "postgrator",
    "tasks",
    ".nyc_output",
    "coverage",
    "./dist",
    "./circleci",
    "./github",
    "./*.js",
    "./*.json",
    "./*.yml"
  ]
}
